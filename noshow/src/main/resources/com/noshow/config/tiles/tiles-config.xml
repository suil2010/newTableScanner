<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE tiles-definitions PUBLIC 
		"-//Apache Software Foundation//DTD Tiles Configuration 3.0//EN" 
		"http://tiles.apache.org/dtds/tiles-config_3_0.dtd">

<tiles-definitions>

	<!-- owner tiles -->
	<definition name="ownerTemplate" template="/WEB-INF/view/layout/ownerTemplate.jsp">

	</definition>
	<definition name="owner/*.tiles" extends="ownerTemplate">
		<put-attribute name="content" value="/WEB-INF/view/content/owner/{1}.jsp" />
	</definition>

	<!-- main tiles -->
	<definition name="mainTemplate" template="/WEB-INF/view/layout/mainTemplate.jsp">
		<put-attribute name="header" value="/WEB-INF/view/layout/header.jsp" />
		<put-attribute name="menu" value="/WEB-INF/view/layout/menu.jsp"/>
	</definition>

	<definition name="*.tiles" extends="mainTemplate">
		<put-attribute name="content" value="/WEB-INF/view/content/{1}.jsp" />
	</definition>
	
	<definition name="*/*.tiles" extends="mainTemplate">
		<put-attribute name="content" value="/WEB-INF/view/content/{1}/{2}.jsp" />
	</definition>



	

	
	
</tiles-definitions>