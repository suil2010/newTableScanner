<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.noshow.config.mybatis.mapper.boardMapper">

	<sql id="board-column">
		board_num,
		board_subject,
		board_text,
		board_views,
		board_time,
		
	</sql>
	
	<!-- 게시글 전체목록 조회 -->
	<select id="allList" resultType="Board">
	select	board_num,
			board_subject,
			board_text,
			board_views,
			board_time
	from	board
	order by	board_time desc
	</select>
	
	<!-- 게시글 작성 -->
	<insert id="insertBoard" parameterType="Board">
	insert into board(<include refid="board-column"/>)
	values(#{boardNum}, #{boardSubject}, #{boardText}, #{boardViews}, #{boardTime})
	</insert>
	
</mapper>